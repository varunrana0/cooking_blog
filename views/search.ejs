<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Search Results</li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-2 g-2 g-lg-3">
  <% if(typeof recipe !== "undefined" && recipe.length > 0){%> <%
  recipe.forEach(function(recipe, index){ %>

  <a href="/recipe/<%- recipe._id %> " class="col category__link text-center">
    <div class="category__img--large shadow">
      <img src="/uploads/<%- recipe.image%>" alt="<%- recipe.name%>" />
    </div>
    <div class="pt-1"><%- recipe.name%></div>
  </a>

  <% })%> <% }else{%>
  <p>No items Found</p>
  <% }%>
</div>
